import os
import time
import platform
def mycode(cmd1,cmd2):
  print("Please wait we are cleaning the screen")
  time.sleep(2)
  os.system(cmd1)
  time.sleep(2)
  print("list of files in directory")
  os.system(cmd2)
if platform.system()=="Linux":
  mycode("clear","ls -lrt")
else:
  mycode("cls","dir")
